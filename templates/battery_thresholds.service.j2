# {{ ansible_managed }}

[Unit]
Description=Set battery charge thresholds

[Service]
Type=oneshot
ExecStart=/usr/bin/bash -c 'echo 90 > /sys/class/power_supply/BAT1/charge_control_end_threshold'
ExecStart=/usr/bin/bash -c 'echo 70 > /sys/class/power_supply/BAT1/charge_control_start_threshold'

[Install]
WantedBy=multi-user.target
